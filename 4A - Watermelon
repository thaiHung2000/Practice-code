#include <stdio.h>
int main()
{
    int weigh;
    scanf("%d", &weigh);
    int i = 2;
    int count = 0;
    while( i <= 100 )
    {
        if( ( weigh - i )% 2 ==  0 && weigh != 2 )
        {
            printf("YES");
            count = 1;
            break;
        }
        
        i = i + 2;
    }
    if( count == 0 )
    {
        printf("NO");
    }
    
}
