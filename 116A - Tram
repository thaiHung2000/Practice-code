#include <stdio.h>
int main()
{
    int n ;
    scanf("%d", &n);
    int miniumCapacity = 0;
    int c = 0;
    for(int i = 0 ; i < n ; i++ )
    {
        int a, b;
        scanf("%d", &a);
        scanf("%d", &b);
        c += b;
        c -= a;
        if( c > miniumCapacity )
        {
            miniumCapacity = c;
        }
 
    }
    printf("%d", miniumCapacity);
}
